# Personal Aliases
alias tv='termv'
alias vim='nvim'
alias kitty='GLFW_IM_MODULE=ibus command kitty'
alias dots='/usr/bin/git --git-dir=$HOME/repos/dotfiles --work-tree=$HOME'

alias rm='rm -i'
alias md='mkdir -p'
alias mv='mv -i'
alias cp='cp -i'
alias l='ls -lFh'
alias ll='ls -l'
alias lr='ls -tRFh'
alias lrt='ls -1Fcrt'
alias lsr='ls -lARFh'
alias lt='ls -ltFh'
alias lS='ls -1FSsh'
alias la='ls -lAFh'
alias lart='ls -1Fcart'
alias ldot='ls -ld .*'
alias h='history | fzf'


alias ag='ag -i --color --hidden --ignore={node_modules,build,package-lock.json}'
alias rg='rg -i --color=auto --colors=path:fg:yellow --colors=match:fg:green --hidden --no-ignore'
alias grep='grep --color'
alias egrep='grep -E --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}'
alias ff='find . -type f -name'
alias fgrep='grep -F --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}'
alias hgrep='fc -El 0 | grep'
alias xzegrep='xzegrep --color=auto'
alias xzfgrep='xzfgrep --color=auto'
alias xzgrep='xzgrep --color=auto'
alias zegrep='zegrep --color=auto'
alias zfgrep='zfgrep --color=auto'
alias zgrep='zgrep --color=auto'
alias sgrep='grep -R -n -H -C 5 --exclude-dir={.git,.svn,CVS} '
alias afind='ack -il'

alias dud='du -d 1 -h'
alias duf='du -sh *'
alias t='tail -f'
alias rd=rmdir
alias rfind='find . -name "*.rb" | xargs grep -n'
alias p='ps -f'

# DNF
alias dnfc='sudo dnf clean all'
alias dnfgi='sudo dnf groupinstall'
alias dnfgl='dnf grouplist'
alias dnfgr='sudo dnf groupremove'
alias dnfi='sudo dnf install'
alias dnfl='dnf list'
alias dnfli='dnf list installed'
alias dnfmc='dnf makecache'
alias dnfp='dnf info'
alias dnfr='sudo dnf remove'
alias dnfs='dnf search'
alias dnfu='sudo dnf upgrade'

# Git
alias g=git
alias ga='git add'
alias gcl='git clone'
alias gst='git status'
alias gd="git diff HEAD -- ':!package-lock.json'"
alias gst='git status'
alias gbr='git branch'
alias gps='git push'
