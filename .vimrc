syntax on
filetype plugin indent on
set autoindent
set autowrite
set relativenumber
set number
set ruler
set showmode
set tabstop=4
set shiftwidth=4
set expandtab
set mouse=a
set textwidth=80
set linebreak
set colorcolumn=80
set ignorecase
set smartcase
set spell
set hlsearch
set incsearch
set wrapscan
set hidden
set wildmenu
set autochdir
nnoremap <C-L> :nohl<CR><C-L>
colorscheme murphy
